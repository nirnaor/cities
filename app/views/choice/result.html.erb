<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<h1>Here are the results of your last choices</h1>

<div class="choiceparams">
<% @draws.each do |draw| %>
  <label> Costs <%= draw['choice'].costs%> 
  </br>
  <label> Education <%= draw['choice'].education %> 
  </br>
  <label> Environment <%= draw['choice'].enviornment %> 
  </br>
  <label> Secutiry <%= draw['choice'].security %> 
  </br>
  <label> Transportation <%= draw['choice'].transportation %> 
  </br>
</div>

<table>
  <tr>
    <th>City name</th>
    <th>Weighted Grade</th>
  </tr>

<% draw['grades'].each do |city_grade| %>
  <tr>
    <td><%= city_grade[0] %></td>
    <td><%= city_grade[1] %></td>
  </tr>
<% end %>
</table>

<br />

<%= column_chart draw['grades_charts'] %>
<%= pie_chart draw['grades_charts'] %>

<% end %>

